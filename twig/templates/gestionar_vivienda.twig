<script>
    function copyToClipboard(event, url) {
        event.preventDefault(); // Evitar que se abra la URL
        const el = document.createElement('textarea');
        el.value = url;
        document.body.appendChild(el);
        el.select();
        document.execCommand('copy');
        document.body.removeChild(el);

        // Mostrar el mensaje de copiado
        app.toast.create({
            text: 'Enlace copiado al portapapeles',
            closeTimeout: 2000
        }).open();
    }

    function shareWhatsApp(url) {
        const phoneInput = document.getElementById('phone').value;
        const countryCode = document.getElementById('country-code').value;
        if (phoneInput) {
            const fullPhoneNumber = countryCode + phoneInput;
            const whatsappUrl = `https://api.whatsapp.com/send?phone=${fullPhoneNumber}&text=Accede a tu estancia: ${url}`;
            window.open(whatsappUrl, '_blank');
        } else {
            alert('Por favor, ingrese un número de teléfono.');
        }
    }
    $(function () {


        const form = document.getElementById('generate-url-form');
        form.addEventListener('submit', function (event) {
            event.preventDefault(); // Evita el envío tradicional del formulario

            // Validar todos los campos requeridos
            if (form.checkValidity()) {
                // Todos los campos requeridos están completos
                // Aquí puedes agregar el código JavaScript que deseas ejecutar
                /*const startTime = document.getElementById('start_time').value;
                const endTime = document.getElementById('end_time').value;
                const phone = document.getElementById('phone').value;
                const uniToken = document.querySelector('input[name="uni_token"]').value;
    
                // Por ejemplo, puedes mostrar los valores en la consola
                console.log('Inicio estancia:', startTime);
                console.log('Fin estancia:', endTime);
                console.log('Número de teléfono:', phone);
                console.log('Uni Token:', uniToken);*/
                
                const formData = new FormData(form);
                 const data = {
                     fk_vivienda: formData.get('uni_token'),
                     fecha_inicio: formData.get('start_time').replace('T', ' '),
                     fecha_final: formData.get('end_time').replace('T', ' ')
                 };
                fetch('method.php?action=createTemporaryToken', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',

                    },
                    body: JSON.stringify(data)
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.error) {
                            app.dialog.alert('Error al generar el token', 'Error');
                            return;
                        }
                        const token = data;
                        const baseUrl = '{{conf.base_panel_url}}/apertura_puerta.php';
                        const temporaryUrl = `${baseUrl}?token=${token}`;

                        document.querySelector('.generated-url').innerHTML = `
                        <p></p>
                        <button id="share-button" class="button button-large button-round button-fill color-green" style="display:none;" onclick="shareWhatsApp('${temporaryUrl}')"><i class="icon f7-icons">chat_bubble_text</i> Compartir por WhatsApp</button>
                    `;

                        // Copiar al portapapeles
                        const el = document.createElement('textarea');
                        el.value = temporaryUrl;
                        document.body.appendChild(el);
                        el.select();
                        document.execCommand('copy');
                        document.body.removeChild(el);

                        // Mostrar el mensaje de copiado
                        app.toast.create({
                            text: 'Enlace copiado al portapapeles',
                            closeTimeout: 2000
                        }).open();

                        const phoneInput = document.getElementById('phone').value;
                        if (phoneInput) {
                            document.getElementById('share-button').style.display = 'block';
                        }
                    });

            } else {
                // Si hay campos no válidos, mostrar el mensaje de validación
                app.dialog.alert('Por favor, completa todos los campos', 'Error');
                form.reportValidity();
            }
        });

        function openApartment(uniToken) {

            fetch('method.php?action=sendMqtt', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    uni_token: uniToken
                })
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        app.dialog.alert('Puerta abierta correctamente', 'Éxito');
                        $("#lock_image").attr("src", "img/lock_open.png");
                    } else {
                        app.dialog.alert('Error al abrir la puerta', 'Error');
                    }
                })
                .catch(error => {

                    app.dialog.alert('Error al abrir la puerta', 'Error');
                });
        }




        $("#unlock .drag").draggable({
            axis: 'x',
            containment: 'parent',
            drag: function (event, ui) {

                $('#unlock .content .drop').addClass('active');

                if (ui.position.left > 105) {

                    $('#unlock .content .drop').addClass('hover');

                }

            },
            stop: function (event, ui) {
                console.log(ui.position.left);
                if (ui.position.left < 195) {
                    $(this).animate({
                        left: 0
                    })
                    $('#unlock .content .drop').removeClass('hover');
                    $('#unlock .content .drop').removeClass('active');

                } else {
                    $(this).animate({
                        left: 0
                    })
                    $('#unlock .content .drop').removeClass('hover');
                    $('#unlock .content .drop').removeClass('active');
                    openApartment('{{vivienda.uni_token}}')
